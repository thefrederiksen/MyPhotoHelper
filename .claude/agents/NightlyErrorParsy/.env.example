# NightlyErrorParsy Environment Variables
# Copy this file to .env and fill in your values

# SQL Server Configuration
SQL_SERVER=localhost
SQL_DATABASE=mindzie
SQL_USERNAME=svc_nightlyerrorparsy
SQL_PASSWORD=your_password_here

# Azure DevOps Configuration
AZURE_DEVOPS_ORG=https://dev.azure.com/mindzie
AZURE_DEVOPS_PROJECT=mindzieStudio1
AZURE_DEVOPS_PAT=your_pat_token_here

# OpenAI Configuration (choose one)
# Option 1: OpenAI
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4

# Option 2: Azure OpenAI
# LLM_PROVIDER=azure
# OPENAI_API_KEY=your_azure_openai_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# Email Configuration
# Option 1: SendGrid
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Option 2: SMTP
# EMAIL_PROVIDER=smtp
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password_here

# Email Settings
FROM_EMAIL=noreply@mindzie.com
FROM_NAME=NightlyErrorParsy
TO_EMAILS=team@mindzie.com,devops@mindzie.com
CC_EMAILS=manager@mindzie.com

# Processing Options
PARSY_MODE=full  # full, analyze, or report
PARSY_DRY_RUN=false
ENABLE_LLM=true
ENABLE_EMAIL=true
CREATE_WORK_ITEMS=true
MAX_ERRORS=100