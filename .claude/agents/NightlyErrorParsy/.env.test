# Test Configuration for NightlyErrorParsy
# Use this for testing with limited scope

# For testing without SQL Server
USE_TEST_DATA=true
TEST_DATA_FILE=test_data/single_error.json

# Azure DevOps - Test in dry run mode
AZURE_DEVOPS_ORG=https://dev.azure.com/mindzie
AZURE_DEVOPS_PROJECT=mindzieStudio1
AZURE_DEVOPS_PAT=your_pat_here
PARSY_DRY_RUN=true  # Won't create actual work items

# LLM Configuration for Testing
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_key_here
LLM_MODEL=gpt-3.5-turbo  # Cheaper model for testing
MAX_TOKENS=500  # Limit tokens for testing

# Email - Disable for testing
ENABLE_EMAIL=false

# Processing limits for testing
MAX_ERRORS=1  # Process only 1 error
CREATE_WORK_ITEMS=false  # Don't create actual items during test