{
  "orchestrator": {
    "mode": "full",
    "dry_run": false,
    "enable_llm": true,
    "enable_email": true,
    "create_work_items": true,
    "max_errors_to_process": 100,
    "parallel_processing": false
  },
  
  "error_monitor": {
    "server": "localhost",
    "database": "mindzie",
    "table": "tbl_global_log",
    "batch_size": 100,
    "lookback_hours": 24,
    "dedup_threshold": 0.85
  },
  
  "devops_sync": {
    "organization": "https://dev.azure.com/mindzie",
    "project": "mindzieStudio1",
    "area": "mindzieStudio1",
    "iteration": "mindzieStudio1\\New AI Coding Sprint",
    "default_type": "Bug",
    "similarity_threshold": 0.85
  },
  
  "llm_analyzer": {
    "provider": "openai",
    "model": "gpt-4",
    "temperature": 0.3,
    "max_tokens": 2000,
    "similarity_threshold": 0.85,
    "batch_size": 5
  },
  
  "report_generator": {
    "email_provider": "sendgrid",
    "from_email": "noreply@mindzie.com",
    "from_name": "NightlyErrorParsy",
    "to_emails": [],
    "cc_emails": [],
    "enable_csv": true,
    "enable_json": true,
    "enable_html": true
  },
  
  "paths": {
    "data_dir": "shared/data",
    "cache_dir": "shared/cache",
    "report_dir": "reports",
    "log_dir": "logs"
  }
}