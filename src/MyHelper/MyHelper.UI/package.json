{
  "name": "@myhelper/ui",
  "version": "1.0.0",
  "description": "MyHelper UI Component Library - Reusable Tailwind CSS components",
  "main": "myhelper.css",
  "scripts": {
    "build": "tailwindcss -i ./myhelper.css -o ./dist/myhelper.min.css --minify",
    "build:watch": "tailwindcss -i ./myhelper.css -o ./dist/myhelper.min.css --watch",
    "dev": "tailwindcss -i ./myhelper.css -o ./dist/myhelper.css --watch"
  },
  "keywords": [
    "ui",
    "components",
    "tailwindcss",
    "css",
    "myhelper"
  ],
  "author": "MyHelper Team",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "files": [
    "dist/",
    "components/",
    "utilities/",
    "myhelper.css",
    "tailwind.config.js",
    "README.md"
  ]
}