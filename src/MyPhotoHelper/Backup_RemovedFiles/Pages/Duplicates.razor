@page "/duplicates"
@using FaceVault.Services
@using FaceVault.Models
@using System.IO

<PageTitle>Clean Up Duplicates - FaceVault</PageTitle>

<FaceVault.Components.ErrorBoundary PageName="Duplicates">

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6">
                <span class="oi oi-trash me-3" aria-hidden="true"></span>
                Clean Up Duplicates
            </h1>
            <p class="lead">üóëÔ∏è <strong>Goal:</strong> Delete duplicate photos to free up space</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="mt-3">Loading duplicates to clean up...</div>
        </div>
    }
    else if (duplicateGroups == null || !duplicateGroups.Any())
    {
        <div class="text-center">
            <div class="card">
                <div class="card-body">
                    <span class="oi oi-check text-success" style="font-size: 3rem;" aria-hidden="true"></span>
                    <h3 class="mt-3">üéâ No Duplicates Found!</h3>
                    <p class="text-muted">All your images are unique - nothing to clean up!</p>
                    <button class="btn btn-primary" @onclick="GoBackToScan">
                        <span class="oi oi-arrow-left" aria-hidden="true"></span> Back to Database Scan
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Summary and Action Panel -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="alert alert-info">
                    <h5><span class="oi oi-info" aria-hidden="true"></span> What You'll Save:</h5>
                    <div class="row">
                        <div class="col-md-4">
                            <strong class="text-primary fs-4">@duplicateGroups.Sum(g => g.Count - 1)</strong><br>
                            <small>Duplicate files to delete</small>
                        </div>
                        <div class="col-md-4">
                            <strong class="text-success fs-4">@FormatBytes(duplicateGroups.Sum(g => g.WastedSpace))</strong><br>
                            <small>Storage space you'll free up</small>
                        </div>
                        <div class="col-md-4">
                            <strong class="text-warning fs-4">@duplicateGroups.Count</strong><br>
                            <small>Groups of identical photos</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">üöÄ Quick Actions</h6>
                    </div>
                    <div class="card-body">
                        <button class="btn btn-danger w-100 mb-2" @onclick="DeleteAllRecommended" 
                                disabled="@isDeleting">
                            @if (isDeleting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            <span class="oi oi-trash" aria-hidden="true"></span> 
                            Delete All Duplicates
                        </button>
                        <small class="text-muted">
                            ‚úÖ Keeps the <strong>oldest</strong> copy of each photo<br>
                            üóëÔ∏è Deletes all other copies
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Individual Groups for Review -->
        <div class="row mb-3">
            <div class="col-12">
                <h5>üìã Review Before Deleting (Optional)</h5>
                <p class="text-muted">Look through these groups if you want to choose which duplicates to keep. Otherwise, just use "Delete All Duplicates" above.</p>
            </div>
        </div>

        @foreach (var group in duplicateGroups.Take(10))
        {
            var keepImage = group.Images.OrderBy(i => i.DateCreated).First(); // Oldest = keep
            var deleteImages = group.Images.Where(i => i.Id != keepImage.Id).ToList();
            
            <div class="card mb-3">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>
                            <span class="oi oi-layers text-warning" aria-hidden="true"></span>
                            <strong>@group.Count identical photos</strong> - Will save @group.WastedSpaceFormatted
                        </span>
                        <button class="btn btn-outline-danger btn-sm" @onclick="() => DeleteDuplicatesInGroup(group.Hash)">
                            <span class="oi oi-trash" aria-hidden="true"></span> 
                            @if (deleteImages.Count == 1)
                            {
                                <text>Delete this Duplicate</text>
                            }
                            else
                            {
                                <text>Delete @deleteImages.Count Duplicates</text>
                            }
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Keep This One -->
                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-header bg-success text-white text-center py-2">
                                    <strong><span class="oi oi-circle-check" aria-hidden="true"></span> ‚úÖ KEEP THIS ONE</strong>
                                </div>
                                <div class="card-body p-3">
                                    <div class="duplicate-image-container mb-2">
                                        <FaceVault.Components.ImageThumbnail Photo="keepImage" />
                                    </div>
                                    <div class="path-info">
                                        <div class="text-muted">
                                            <small class="d-block mb-1">
                                                <span class="oi oi-file" aria-hidden="true"></span>
                                                <strong>@Path.GetFileName(keepImage.FilePath)</strong>
                                            </small>
                                            <small class="d-block text-truncate" title="@keepImage.FilePath">
                                                <span class="oi oi-folder" aria-hidden="true"></span>
                                                @Path.GetDirectoryName(keepImage.FilePath)
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Delete These -->
                        <div class="col-md-6">
                            <div class="card border-danger">
                                <div class="card-header bg-danger text-white text-center py-2">
                                    @if (deleteImages.Count == 1)
                                    {
                                        <strong><span class="oi oi-trash" aria-hidden="true"></span> üóëÔ∏è DELETE THIS</strong>
                                    }
                                    else
                                    {
                                        <strong><span class="oi oi-trash" aria-hidden="true"></span> üóëÔ∏è DELETE THESE (@deleteImages.Count duplicates)</strong>
                                    }
                                </div>
                                <div class="card-body p-3">
                                    <div class="duplicates-list">
                                        @foreach (var deleteImage in deleteImages)
                                        {
                                            <div class="duplicate-item mb-3">
                                                <div class="duplicate-image-container mb-2">
                                                    <FaceVault.Components.ImageThumbnail Photo="deleteImage" />
                                                </div>
                                                <div class="path-info">
                                                    <div class="text-muted">
                                                        <small class="d-block mb-1">
                                                            <span class="oi oi-file" aria-hidden="true"></span>
                                                            <strong>@Path.GetFileName(deleteImage.FilePath)</strong>
                                                        </small>
                                                        <small class="d-block text-truncate" title="@deleteImage.FilePath">
                                                            <span class="oi oi-folder" aria-hidden="true"></span>
                                                            @Path.GetDirectoryName(deleteImage.FilePath)
                                                        </small>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (duplicateGroups.Count > 10)
        {
            <div class="alert alert-warning">
                <span class="oi oi-info" aria-hidden="true"></span>
                <strong>Showing first 10 groups.</strong> You have @(duplicateGroups.Count - 10) more duplicate groups. 
                Use "Delete All Duplicates" above to clean them all up at once.
            </div>
        }

        <div class="text-center mt-4">
            <button class="btn btn-outline-secondary" @onclick="GoBackToScan">
                <span class="oi oi-arrow-left" aria-hidden="true"></span> Back to Database Scan
            </button>
        </div>
    }
</div>

</FaceVault.Components.ErrorBoundary>

<style>
    .duplicate-image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        border-radius: 0.375rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
    }

    .duplicate-image-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .path-info {
        word-break: break-all;
        font-size: 0.8rem;
        line-height: 1.4;
        padding-top: 0.5rem;
        border-top: 1px solid #dee2e6;
    }
    
    .path-info small {
        margin-bottom: 0.25rem;
    }
    
    .path-info .oi {
        margin-right: 0.25rem;
        color: #6c757d;
    }

    .duplicates-list {
        max-height: 600px;
        overflow-y: auto;
    }

    .duplicate-item {
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 1rem;
    }

    .duplicate-item:last-child {
        border-bottom: none;
        padding-bottom: 0;
    }

    /* Custom scrollbar for duplicates list */
    .duplicates-list::-webkit-scrollbar {
        width: 8px;
    }

    .duplicates-list::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 4px;
    }

    .duplicates-list::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 4px;
    }

    .duplicates-list::-webkit-scrollbar-thumb:hover {
        background: #555;
    }
</style>