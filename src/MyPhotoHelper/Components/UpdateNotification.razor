<style>
    .update-notification {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: var(--primary);
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        z-index: 1050;
        animation: slideIn 0.3s ease-out;
    }

    .update-content {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .update-icon {
        font-size: 1.5rem;
    }

    .update-text {
        margin-right: 1rem;
    }

    @@keyframes slideIn {
        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }
