@page "/memories"
@using MyPhotoHelper.Components.Shared

<PageTitle>Memories - @selectedDate.ToString("MMMM d") - MyPhotoHelper</PageTitle>

<div class="w-full">
    <div class="flex justify-between items-center mb-4">
        <div>
            <h1 class="text-4xl font-light">ðŸ“¸ Memories</h1>
            <p class="text-lg text-gray-500">Photos from @selectedDate.ToString("MMMM d") in previous years</p>
            @if (selectedDate.Date != DateTime.Today)
            {
                <p class="text-cyan-600 text-sm mb-0">
                    <i class="oi oi-calendar"></i> Viewing: @selectedDate.ToString("dddd, MMMM d, yyyy")
                    @if (selectedDate.Date > DateTime.Today)
                    {
                        <span class="bg-cyan-100 text-cyan-800 text-sm font-medium px-2.5 py-0.5 rounded ml-2">Future Date</span>
                    }
                </p>
            }
        </div>
        <div class="flex gap-2">
            <button class="bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-2 px-4 rounded" @onclick="PreviousDay">
                <i class="oi oi-chevron-left"></i> Previous Day
            </button>
            <button class="bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-2 px-4 rounded" @onclick="NextDay">
                <i class="oi oi-chevron-right"></i> Next Day
            </button>
            <button class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" @onclick="GoToToday">
                <i class="oi oi-home"></i> Today
            </button>
        </div>
    </div>

    @if (ScanStatusService.IsScanning && !hasPhotos)
    {
        <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded mb-4 flex items-center">
            <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-blue-600 mr-3" role="status">
                <span class="sr-only">Scanning...</span>
            </div>
            <div>
                <h6 class="mb-0">Scanning for photos...</h6>
                <small>Your memories will appear here as photos are discovered.</small>
            </div>
        </div>
    }
    
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600" role="status">
                <span class="sr-only">Loading memories...</span>
            </div>
            <p class="mt-2 text-gray-500">Loading memories for @selectedDate.ToString("MMMM d")...</p>
        </div>
    }
    else if (memories?.HasMemories == true)
    {
        <div class="mb-3">
                <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded flex items-center">
                    <i class="oi oi-info mr-2"></i>
                    <span>Found <strong>@memories.TotalPhotos</strong> photos from @memories.FormattedDate across <strong>@memories.YearGroups.Count</strong> years</span>
                </div>
        </div>

        @foreach (var yearGroup in memories.YearGroups)
        {
            <div class="bg-white rounded-lg shadow mb-4">
                <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex justify-between items-center">
                    <h3 class="mb-0">
                        @yearGroup.Year
                        @if (yearGroup.IsToday(selectedDate))
                        {
                            <span class="bg-green-100 text-green-800 text-sm font-medium px-2.5 py-0.5 rounded ml-2">Today's Photos</span>
                        }
                        else if (yearGroup.Year == DateTime.Today.Year - 1)
                        {
                            <span class="bg-cyan-100 text-cyan-800 text-sm font-medium px-2.5 py-0.5 rounded ml-2">Last Year</span>
                        }
                    </h3>
                    <span class="bg-gray-100 text-gray-800 text-sm font-medium px-2.5 py-0.5 rounded">@yearGroup.PhotoCount photos</span>
                </div>
                <div class="p-4">
                    <div class="photo-grid">
                        @foreach (var photo in yearGroup.Photos.Take(20))
                        {
                            <ImageViewer Photo="photo" ShowTime="true" OnImageClick="HandleImageClick" />
                        }
                    </div>
                    @if (yearGroup.PhotoCount > 20)
                    {
                        <div class="mt-3 text-center">
                            <button class="bg-white border border-blue-500 text-blue-500 hover:bg-blue-50 font-medium py-1 px-3 rounded text-sm" @onclick="() => ShowAllPhotosForYear(yearGroup.Year)">
                                View all @yearGroup.PhotoCount photos from @yearGroup.Year
                            </button>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="oi oi-camera" style="font-size: 4rem; color: #6c757d;"></i>
            </div>
            <h3 class="text-gray-500">No memories for @selectedDate.ToString("MMMM d")</h3>
            <p class="text-gray-500">No photos were taken on this day in previous years.</p>
            <p class="text-gray-500 mb-4">Try browsing other dates or make sure your photos have been scanned and have date information.</p>
            <div class="flex gap-2 justify-center">
                <button class="bg-white border border-blue-500 text-blue-500 hover:bg-blue-50 font-medium py-2 px-4 rounded" @onclick="PreviousDay">
                    <i class="oi oi-chevron-left"></i> Previous Day
                </button>
                <button class="bg-white border border-blue-500 text-blue-500 hover:bg-blue-50 font-medium py-2 px-4 rounded" @onclick="NextDay">
                    <i class="oi oi-chevron-right"></i> Next Day
                </button>
            </div>
        </div>
    }
</div>

<style>
    .photo-grid {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        justify-content: flex-start;
    }
</style>