@page "/screenshot-analysis"
@inject NavigationManager Navigation

<PageTitle>Feature Temporarily Unavailable</PageTitle>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <span class="oi oi-warning" aria-hidden="true"></span> 
                        Screenshot Analysis Temporarily Unavailable
                    </h4>
                </div>
                <div class="card-body text-center py-5">
                    <i class="oi oi-monitor" style="font-size: 4rem; color: #ffc107;"></i>
                    <h3 class="mt-3">Screenshot Analysis Under Maintenance</h3>
                    <p class="lead text-muted">
                        Screenshot detection and analysis features are temporarily disabled while we upgrade the system.
                    </p>
                    
                    <div class="alert alert-light border mt-4" role="alert">
                        <h6 class="alert-heading">What's happening:</h6>
                        <ul class="text-start mb-0">
                            <li>Database schema has been updated to a flexible key-value settings system</li>
                            <li>Analysis features are being migrated to work with the new architecture</li>
                            <li>Basic photo scanning and management remain available</li>
                            <li>Screenshot detection will be restored once the migration is complete</li>
                        </ul>
                    </div>

                    <div class="mt-4">
                        <button class="btn btn-primary" @onclick="GoHome">
                            <span class="oi oi-home" aria-hidden="true"></span> Go to Memories
                        </button>
                        <button class="btn btn-outline-secondary ms-2" @onclick="GoToPhotoScan">
                            <span class="oi oi-pulse" aria-hidden="true"></span> Photo Scanning
                        </button>
                        <button class="btn btn-outline-info ms-2" @onclick="GoToGallery">
                            <span class="oi oi-image" aria-hidden="true"></span> Gallery
                        </button>
                    </div>
                    
                    <p class="text-muted mt-3">
                        <small>You can still access all your photos through the Gallery and Memories sections.</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }
    
    private void GoToPhotoScan()
    {
        Navigation.NavigateTo("/photo-scan");
    }
    
    private void GoToGallery()
    {
        Navigation.NavigateTo("/gallery");
    }
}